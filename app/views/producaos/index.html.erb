<p style="color: green"><%= notice %></p>
<div class='o-header'>
<h1>Cadastro de Produtos</h1>
</div>
<div class="o-aside">
  <h1 style='text-align:center'>Cadastro</h1>
  <div class='cadastro'>
    <%= render "form", producao: @producao %>
  </div>
</div>
<div class="o-main">
  <main>
    <div id="producaos">
      <h1 style='text-align:center'>Produtos</h1>
      <table class="table">
        <thead>
          <tr>
            <th><strong>Nome<strong></th>
            <th><strong>Descrição<strong></th>
            <th><strong>Preço<strong></th>
            <th style='border:none'></th>
            <th style='border:none'></th>
          </tr>
        </thead>
        <tbody>
          <% @producaos.each do |producao| %>
          <tr>
            <td><%= producao.name %></td>
            <td><%= producao.description %></td>
            <td><%= producao.price %></td>
            <td style='border:none'><%= link_to "Editar", edit_producao_path(producao) %></td>
            <td style='border:none'><%= button_to "Excluir", producao, method: :delete %></td>
          </tr>
          <% end %>
        </tbody>  
      </table>
    </div>
  </main>
</div>
